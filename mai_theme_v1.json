{
  "theme_id": "mai_theme_v1",
  "metadata": {
    "name": "MAI Slideware Theme",
    "version": "1.0",
    "description": "Warm vintage paper style. Primary fonts: Times New Roman (display) + Segoe Sans (body). Background: warm ivory. Soft, muted accent palette."
  },
  "fonts": {
    "primary": {
      "name": "Times New Roman",
      "fallbacks": [
        "Georgia",
        "serif"
      ],
      "usage": [
        "title",
        "section_heading",
        "quote"
      ],
      "weights": {
        "regular": 400,
        "italic": 400,
        "bold": 700
      }
    },
    "secondary": {
      "name": "Segoe UI",
      "family_name_display": "Segoe Sans",
      "fallbacks": [
        "Arial",
        "Helvetica",
        "sans-serif"
      ],
      "usage": [
        "body",
        "caption",
        "chart_labels",
        "table_text"
      ],
      "weights": {
        "light": 300,
        "regular": 400,
        "semibold": 600
      }
    },
    "replacement_rules": {
      "force_replace_nonmatching": true,
      "title_priority": "primary",
      "body_priority": "secondary"
    },
    "recommended_sizes": {
      "title": 72,
      "slide_title": 48,
      "section_header": 40,
      "heading": 32,
      "body": 22,
      "caption": 16,
      "footnote": 14
    },
    "line_height": {
      "body": 1.2,
      "heading": 1.05
    }
  },
  "colors": {
    "palette_name": "mai_warm_neutral",
    "backgrounds": {
      "page": "#FEF9ED",
      "panel": "#EFE2D1",
      "card": "#E1DBC6",
      "divider": "#DDD0C0"
    },
    "text": {
      "primary": "#72675B",
      "secondary": "#5F4E41",
      "strong": "#3B230E",
      "muted": "#8A7F74"
    },
    "accent": {
      "accent_1": "#FFEECC",
      "accent_2": "#FDE095",
      "accent_3": "#E5B85C",
      "accent_4": "#705B31"
    },
    "warm_orange": [
      "#FBCFB9",
      "#E68863",
      "#CC653C",
      "#5F2711"
    ],
    "violet_plum": [
      "#E6CAD1",
      "#CCA3AD",
      "#8C5462",
      "#4D2A33"
    ],
    "teal_blue": [
      "#CFE6E6",
      "#99BFBF",
      "#628C8C",
      "#2E4D4D"
    ],
    "mint_moss": [
      "#D7E6D6",
      "#AABFA9",
      "#738C7B",
      "#434D46"
    ],
    "chart_default_palette": [
      "#CFE6E6",
      "#99BFBF",
      "#628C8C",
      "#2E4D4D",
      "#FBCFB9",
      "#E68863",
      "#CC653C",
      "#5F2711"
    ],
    "usage_guidelines": {
      "background": "use backgrounds.page for full-slide; use backgrounds.panel or backgrounds.card for content panels",
      "text": "use text.primary for body and large headings; text.strong for emphasis",
      "accent": "use accent colors sparingly for highlights, callouts, icons",
      "charts": "pick sequential palette from chart_default_palette; avoid pure office-blue"
    }
  },
  "layout": {
    "page_margins": {
      "top": 70,
      "right": 80,
      "bottom": 70,
      "left": 80
    },
    "grid": {
      "columns": 12,
      "gutter": 24,
      "baseline": 8
    },
    "content_width": "calc(100% - left - right)",
    "recommended_compositions": [
      "title_slide_centered",
      "two_column_text_image",
      "left_image_right_text",
      "full_width_graph"
    ],
    "spacing": {
      "section_gap": 32,
      "element_gap": 16,
      "card_padding": 20
    }
  },
  "components": {
    "title_slide": {
      "background": "backgrounds.page",
      "title_font": "fonts.primary",
      "title_size": "fonts.recommended_sizes.title",
      "subtitle_style": {
        "font": "fonts.primary",
        "style": "italic",
        "size": 24,
        "color": "text.secondary"
      }
    },
    "section_header": {
      "background": "transparent",
      "title_font": "fonts.primary",
      "title_size": "fonts.recommended_sizes.section_header",
      "left_border": {
        "width": 0,
        "color": "colors.divider"
      }
    },
    "body": {
      "font": "fonts.secondary",
      "size": "fonts.recommended_sizes.body",
      "color": "colors.text.primary",
      "line_height": "fonts.line_height.body"
    },
    "card": {
      "background": "backgrounds.card",
      "corner_radius": 6,
      "padding": 18,
      "shadow": {
        "enabled": true,
        "blur": 10,
        "opacity": 0.06
      }
    },
    "button": {
      "background_color": "colors.text.strong",
      "text_color": "backgrounds.page",
      "corner_radius": 6,
      "padding": [
        8,
        18
      ]
    }
  },
  "shapes_icons": {
    "corner_radius_px": 6,
    "stroke_color": "#5F4E41",
    "stroke_width_px": 1.5,
    "icon_style": "outline",
    "icon_color": "#5F4E41",
    "icon_size_default": 20
  },
  "images": {
    "preferred_tone": "warm",
    "saturation_limit": 0.6,
    "contrast_limit": 0.9,
    "apply_overlay": {
      "enabled": true,
      "color": "#FEF9ED",
      "opacity": 0.08
    },
    "crop_guidelines": "keep_subject_center_or_left_for_text_overlay"
  },
  "charts": {
    "default_palette": "colors.chart_default_palette",
    "axis": {
      "color": "#5F4E41",
      "width_pt": 1
    },
    "gridlines": {
      "enabled": false,
      "color": "#DDD0C0"
    },
    "bar": {
      "corner_radius": 4,
      "label_font": "fonts.secondary"
    },
    "line": {
      "stroke_width": 2.5,
      "point_radius": 3
    },
    "pie": {
      "label_position": "outside",
      "label_font": "fonts.secondary"
    },
    "priority_order": [
      "teal_blue",
      "mint_moss",
      "warm_orange",
      "warm_orange[1]"
    ]
  },
  "tables": {
    "header_background": "backgrounds.panel",
    "header_font": "fonts.secondary",
    "row_background_alternate": [
      "transparent",
      "backgrounds.card"
    ],
    "border_color": "#DDD0C0",
    "cell_padding": 10
  },
  "conversion_rules": {
    "font_mapping": {
      "any_heading": "fonts.primary",
      "any_body": "fonts.secondary",
      "default_fallback": "fonts.secondary"
    },
    "background_mapping": {
      "if_slide_bg_is_white_or_light": "backgrounds.page",
      "force_background_replace": true
    },
    "color_mapping": {
      "high_saturation_colors": "map_to_nearest_secondary_palette",
      "blues_and_greens": "prefer_teal_blue_palette",
      "reds": "prefer_warm_orange_palette"
    },
    "element_priority": [
      "slide_background",
      "title",
      "section_headers",
      "body_text",
      "charts",
      "tables",
      "icons_images"
    ],
    "style_conflict_resolution": {
      "when_font_missing": "apply_fallback",
      "when_color_matches_no_palette": "map_to_text.primary",
      "when_layout_unknown": "apply_two_column_default"
    }
  },
  "export_helpers": {
    "tokens_provided": true,
    "human_readable_preview": true,
    "notes": "This config expects the agent to be able to replace fonts, recolor shapes, remap chart palettes, and reflow text boxes."
  }
}